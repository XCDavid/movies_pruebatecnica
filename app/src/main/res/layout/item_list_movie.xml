<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_layout"
    android:layout_width="@dimen/item_list_width"
    android:layout_height="@dimen/item_list_height"
    android:layout_marginStart="@dimen/item_list_margin_start_end"
    android:layout_marginTop="@dimen/general_margin_10dp"
    android:layout_marginEnd="@dimen/item_list_margin_start_end"
    android:layout_marginBottom="@dimen/general_margin_10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/item_list_iv_height"
        android:layout_height="@dimen/item_list_iv_width"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/general_margin_7dp"
            android:elevation="@dimen/general_elevation"
            android:padding="@dimen/general_padding_10dp">

            <ImageView
                android:id="@+id/item_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_movie" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_item_list_notification_ly_image_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/general_margin_7dp"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/low_padding_start_end_5dp"
        android:paddingEnd="0dp"
        android:paddingBottom="@dimen/low_padding_start_end_5dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rating: " />

            <TextView
                android:id="@+id/rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="*****" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/overview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>