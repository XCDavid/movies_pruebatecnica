<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.usecases.movies.MoviesFragment"
    android:paddingStart="@dimen/general_padding_10dp"
    android:paddingEnd="@dimen/general_padding_10dp"
    android:paddingTop="@dimen/low_padding_top_bottom_6dp"
    android:paddingBottom="@dimen/low_padding_top_bottom_6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movies_fragment_list_popular_title"
            style="@style/TitleMovieListTextViewStyle"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_popular_movies"
            android:layout_width="match_parent"
            style="@style/SpaceRecyclerViewStyle"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movies_fragment_list_top_rated_title"
            style="@style/TitleMovieListTextViewStyle"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_top_rated_movies"
            android:layout_width="match_parent"
            style="@style/SpaceRecyclerViewStyle"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movies_fragment_list_recommended_title"
            style="@style/TitleMovieListTextViewStyle"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_recommended_movies"
            android:layout_width="match_parent"
            style="@style/SpaceRecyclerViewStyle"
            />
    </LinearLayout>
</ScrollView>